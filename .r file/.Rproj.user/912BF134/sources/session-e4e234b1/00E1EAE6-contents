# reading files in
proj.path <- getwd()
Germany_aaw <- read.csv("E:\\School - work\\RA\\Germany WIP\\latest_DE.csv")

## removing, German operation name, country, postal codes, currency (EUR), benefactors names (they are links), coordinates, category labels,
### thematic objective labels, policy objectives labels, fund names(labels), programme codes, German language summary to hopefully reduce size
Germany_aaw <- Germany_aaw[, -c(1, 3, 4, 5, 10, 12, 13, 15, 17, 19, 21, 22, 28)]
# converting NA values for EU contributions to 0
Germany_aaw$Cofinancing_Rate <- replace(Germany_aaw$Cofinancing_Rate, is.na(Germany_aaw$Cofinancing_Rate), 0)
Germany_aaw$Project_EU_Budget <- replace(Germany_aaw$Project_EU_Budget, is.na(Germany_aaw$Project_EU_Budget), 0)

# Data with only ESF and ERDF fund projects
## The number of non ESF AND ERDF data entries are very small in the first place
Germany_aaw <- subset(Germany_aaw, Fund_Code == "ESF" | Fund_Code == "ERDF")

# splitting the data into two data frames; one for ESF and the other for ERDF
Germany_esf <- subset(Germany_aaw, Fund_Code == "ESF")
Germany_erdf <- subset(Germany_aaw, Fund_Code == "ERDF")

# data summaries
Germany_aaw_Cofinancing_Rate <- summary(Germany_aaw$Cofinancing_Rate)
Germany_aaw_Project_EU_Budget <- summary(Germany_aaw$Project_EU_Budget)
Germany_aaw_Total_Eligible_Expenditure_amount <- summary(Germany_aaw$Total_Eligible_Expenditure_amount)

Germany_esf_Cofinancing_Rate <- summary(Germany_esf$Cofinancing_Rate)
Germany_esf_Project_EU_Budget <- summary(Germany_esf$Project_EU_Budget)
Germany_esf_Total_Eligible_Expenditure_amount <- summary(Germany_esf$Total_Eligible_Expenditure_amount)

Germany_erdf_Cofinancing_Rate <- summary(Germany_erdf$Cofinancing_Rate)
Germany_erdf_Project_EU_Budget <- summary(Germany_erdf$Project_EU_Budget)
Germany_erdf_Total_Eligible_Expenditure_amount <- summary(Germany_erdf$Total_Eligible_Expenditure_amount)

# observation per project
observation_per_programme <- table(Germany_aaw$Programme_Name)
observation_per_programme_erdf <- table(Germany_erdf$Programme_Name)
observation_per_programme_esf <- table(Germany_esf$Programme_Name)

# observation per theme
observation_per_theme <- table(Germany_aaw$Thematic_Objective_ID)
observation_per_theme_erdf <- table(Germany_erdf$Thematic_Objective_ID)
observation_per_theme_esf <- table(Germany_esf$Thematic_Objective_ID)

# observation per policy
observation_per_policy <- table(Germany_aaw$Policy_Objective_ID)
observation_per_policy_erdf <- table(Germany_erdf$Policy_Objective_ID)
observation_per_policy_esf <- table(Germany_esf$Policy_Objective_ID)
